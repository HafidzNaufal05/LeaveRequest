        function Approve(Id) {
            var approve = new Object();
            approve.id = $('#id').val();
            approve.Email = $('#email').val();
            approve.notes = $('#notes1').val();
            $.ajax({
                type: "POST",
                url: '/ApproveHRD/Approve',
                data: approve
            }).done((result) => {
                console.log("ok");
                if (result == 200) {
                    swal('Success', 'Update Successfully', 'success');
                    $('#Request').modal('hide');
                    $("#id").val(null);
                    $("#nik").val(null);
                    $("#leavecategory").val(null);
